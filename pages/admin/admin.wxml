<view class="admin-container" wx:if="{{isAdmin}}">
  <!-- 管理功能菜单 -->
  <view class="menu-section">
    <text class="section-title">管理功能</text>
    <view class="menu-items">
      <view class="menu-item" bindtap="goToWallManage">
        <text class="menu-icon">📝</text>
        <view class="menu-content">
          <text class="menu-title">校园墙管理</text>
          <text class="menu-desc">审核消息、管理内容</text>
        </view>
        <text class="menu-arrow">→</text>
      </view>
    </view>
  </view>
</view>


<!-- 非管理员提示 -->
<view class="no-permission" wx:if="{{!isAdmin && !loading}}">
  <text class="permission-text">您没有管理员权限</text>
  <text class="permission-desc">如需管理功能，请联系系统管理员</text>
  <button class="back-btn" bindtap="goBack" type="primary" size="mini">返回</button>
</view>