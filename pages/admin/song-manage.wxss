/* 歌曲管理页面样式 */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000000;
  text-align: center;
  padding: 20rpx 0;
  text-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.8);
}

/* 统计卡片 */
.stats-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  background: linear-gradient(45deg, #667eea, #764ba2);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #000000;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(to bottom, transparent, rgba(102, 126, 234, 0.3), transparent);
}

/* 当前播放 */
.current-playing {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 3rpx solid #667eea;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  bottom: -3rpx;
  left: 0;
  width: 60rpx;
  height: 3rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  border-radius: 2rpx;
}

.no-song {
  text-align: center;
  color: #000000;
  padding: 40rpx 0;
  font-size: 28rpx;
  background: rgba(249, 249, 249, 0.8);
  border-radius: 16rpx;
  border: 2rpx dashed #ddd;
}

.song-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  color: black;
}

.song-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.song-details {
  flex: 1;
}

.song-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 8rpx;
}

.song-artist {
  font-size: 26rpx;
  color: #333333;
}

.song-status {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.status-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-playing {
  background-color: #52c41a;
  animation: pulse 2s infinite;
}

.status-paused {
  background-color: #ff4d4f;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.status-text {
  font-size: 24rpx;
  color: #333333;
}

/* 控制按钮 */
.control-panel {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.control-buttons {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 20rpx;
  border-radius: 20rpx;
  min-width: 140rpx;
  min-height: 120rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  border: 2rpx solid transparent;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.control-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transform: translateX(-100%);
  transition: transform 0.6s;
}

.control-btn:hover::before {
  transform: translateX(100%);
}

.control-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
}

.control-btn.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: black;
  border-color: rgba(79, 172, 254, 0.3);
}

.control-btn.primary:hover {
  background: linear-gradient(135deg, #3b9bfe 0%, #00d4fe 100%);
  box-shadow: 0 12rpx 32rpx rgba(79, 172, 254, 0.4);
}

.control-btn.danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: black;
  border-color: rgba(255, 107, 107, 0.3);
}

.control-btn.danger:hover {
  background: linear-gradient(135deg, #ff5252 0%, #e53e3e 100%);
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.4);
}

.control-btn.success {
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  color: black;
  border-color: rgba(81, 207, 102, 0.3);
}

.control-btn.success:hover {
  background: linear-gradient(135deg, #47cc5e 0%, #37b24d 100%);
  box-shadow: 0 12rpx 32rpx rgba(81, 207, 102, 0.4);
}

.control-btn.warning {
  background: linear-gradient(135deg, #ffd43b 0%, #fab005 100%);
  color: black;
  border-color: rgba(255, 212, 59, 0.3);
}

.control-btn.warning:hover {
  background: linear-gradient(135deg, #ffcc02 0%, #f08c00 100%);
  box-shadow: 0 12rpx 32rpx rgba(255, 212, 59, 0.4);
}

.control-btn:disabled {
  background: linear-gradient(135deg, #adb5bd 0%, #868e96 100%);
  color: rgba(255, 255, 255, 0.7);
  cursor: not-allowed;
  transform: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.control-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.control-text {
  font-size: 24rpx;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.queue-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.queue-btn {
  flex: 1;
  background: rgba(248, 249, 250, 0.9);
