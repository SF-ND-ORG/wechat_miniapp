/* 审核拒绝模态框 */
.reject-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.reject-modal-content {
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  margin: 30rpx;
  width: calc(100% - 60rpx);
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(30rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.reject-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.reject-reason-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.reject-reason-input {
  width: 100%;
  min-height: 140rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  background: rgba(248, 249, 250, 0.8);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  line-height: 1.6;
}

.reject-reason-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
  outline: none;
  background: white;
}

.reject-modal-actions {
  display: flex;
  gap: 20rpx;
}

.reject-modal-btn {
  flex: 1;
  padding: 24rpx 20rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.reject-modal-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transform: translateX(-100%);
  transition: transform 0.6s;
}

.reject-modal-btn:hover::before {
  transform: translateX(100%);
}

.reject-modal-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
}

.reject-modal-btn.cancel {
  background: linear-gradient(135deg, #adb5bd, #868e96);
  color: black;
  border-color: rgba(173, 181, 189, 0.3);
}

.reject-modal-btn.cancel:hover {
  background: linear-gradient(135deg, #9ca3af, #6b7280);
  box-shadow: 0 12rpx 32rpx rgba(173, 181, 189, 0.4);
}

.reject-modal-btn.confirm {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: black;
  border-color: rgba(255, 107, 107, 0.3);
}

.reject-modal-btn.confirm:hover {
  background: linear-gradient(135deg, #ff5252, #e53e3e);
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.4);
}

.reject-modal-btn:disabled {
  background: linear-gradient(135deg, #e9ecef, #ced4da);
  color: rgba(108, 117, 125, 0.7);
  cursor: not-allowed;
  transform: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

