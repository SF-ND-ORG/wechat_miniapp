/* 我的点歌页面样式 */
.requests-container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.header-stats {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 12rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.stats-text {
  font-size: 24rpx;
  color: white;
}

/* 状态统计区域 */
.stats-section {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-4rpx);
  background: rgba(255, 255, 255, 0.2);
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.stat-number.approved {
  color: #52c41a;
}

.stat-number.rejected {
  color: #ff4d4f;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 点歌列表 */
.requests-list {
  padding: 0 30rpx;
}

.request-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.request-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.song-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
  flex-shrink: 0;
}

.status-pending {
  background: linear-gradient(45deg, #ff9500, #ff7300);
}

.status-approved {
  background: linear-gradient(45deg, #52c41a, #389e0d);
}

.status-rejected {
  background: linear-gradient(45deg, #ff4d4f, #d9363e);
}

/* 详情行 */
.item-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

.detail-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.reason-text {
  color: #ff4d4f;
  font-weight: 500;
}

.success-text {
  color: #52c41a;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
  filter: brightness(0) invert(1);
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.go-search-btn {
  background: linear-gradient(45deg, #4facfe, #00f2fe);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.go-search-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(79, 172, 254, 0.4);
}

.go-search-btn::after {
  border: none;
}

/* 刷新提示 */
.refresh-tip {
  text-align: center;
  padding: 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-section {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .item-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .status-badge {
    align-self: flex-start;
  }
  
  .requests-list {
    padding: 0 20rpx;
  }
  
  .request-item {
    padding: 24rpx;
  }
}