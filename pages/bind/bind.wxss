.bind-page {
	padding-bottom: 100rpx;
}

.bind-hero {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	gap: 18rpx;
	background: linear-gradient(135deg, rgba(99, 102, 241, 0.18) 0%, rgba(79, 70, 229, 0.12) 100%);
	border: 1rpx solid rgba(79, 70, 229, 0.25);
}

.bind-hero__icon {
	width: 128rpx;
	height: 128rpx;
}

.bind-form-card {
	display: flex;
	flex-direction: column;
	gap: 28rpx;
}

.bind-form__title {
	font-size: 32rpx;
	font-weight: 600;
	color: #0f172a;
}

.bind-form {
	display: flex;
	flex-direction: column;
	gap: 32rpx;
}

.bind-field {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.bind-field__label {
	font-size: 28rpx;
	font-weight: 500;
	color: #334155;
}

.bind-field__input {
	height: 92rpx;
	border-radius: 24rpx;
	border: 1rpx solid rgba(148, 163, 184, 0.35);
	background: #f8fafc;
	padding: 0 28rpx;
	font-size: 30rpx;
	color: #0f172a;
	transition: all 0.2s ease;
}

.bind-field__input:focus {
	border-color: rgba(79, 70, 229, 0.55);
	background: #ffffff;
	box-shadow: 0 0 0 6rpx rgba(79, 70, 229, 0.12);
}

.bind-field__input::placeholder {
	color: #94a3b8;
}

.bind-privacy {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
	font-size: 24rpx;
	color: #475569;
}

.bind-privacy__label {
	display: inline-flex;
	align-items: center;
	gap: 12rpx;
}

.bind-privacy__checkbox {
	transform: scale(0.9);
}

.bind-privacy__link {
	color: #2563eb;
	font-weight: 600;
}

.bind-privacy__link::after {
	content: '';
}

.bind-submit {
	height: 96rpx;
	border-radius: 999rpx;
	background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
	color: #ffffff;
	font-size: 30rpx;
	font-weight: 600;
	box-shadow: 0 20rpx 36rpx rgba(99, 102, 241, 0.22);
}

.bind-submit[disabled] {
	background: rgba(148, 163, 184, 0.6);
	box-shadow: none;
}

.bind-tips {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
	background: rgba(15, 23, 42, 0.02);
}

.bind-tips__title {
	font-size: 30rpx;
	font-weight: 600;
	color: #1f2937;
}

.bind-tips__list {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.bind-tips__item {
	font-size: 26rpx;
	color: #475569;
	line-height: 1.6;
}

@media (max-width: 750rpx) {
	.bind-hero__icon {
		width: 112rpx;
		height: 112rpx;
	}

	.bind-submit {
		font-size: 28rpx;
	}
}