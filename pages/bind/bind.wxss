/* 绑定页面样式 */
.bind-container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 头部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  pointer-events: none;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 100rpx;
  left: -75rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 200rpx;
  right: 50rpx;
  animation: float 10s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20rpx); }
}

/* 主要内容 */
.content-container {
  padding: 120rpx 60rpx 60rpx;
  position: relative;
  z-index: 10;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
  filter: brightness(0) invert(1);
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 表单容器 */
.form-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
}

.bind-form {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 输入组 */
.input-group {
  position: relative;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}


.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 96rpx;
  font-size: 30rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 16rpx;
  padding: 0 24rpx;
  background: white;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.4);
}

.submit-btn:disabled {
  background: #ccc;
  box-shadow: none;
  transform: none;
}

.submit-btn::after {
  border: none;
}

/* 提示信息 */
.tips-section {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 24rpx;
}

.tips-item {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 2;
  margin-bottom: 8rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .content-container {
    padding: 100rpx 40rpx 40rpx;
  }
  
  .form-container {
    padding: 40rpx 30rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
}
  button[type=primary] {
    background: #007aff;
    color: #fff;
    font-size: 32rpx;
    border-radius: 8rpx;
    height: 88rpx;
    margin-top: 28rpx;
    letter-spacing: 2rpx;
  }
  
  button[loading] {
    opacity: 0.7;
  }
  
  ::placeholder {
    color: #bdbdbd;
  }