/* 绑定页面样式 */
.page {
    background: #f6f8fa;
    min-height: 100vh;
    padding: 40rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  form {
    width: 80vw;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 32rpx 0 rgba(0,0,0,0.08);
    padding: 48rpx 32rpx;
    display: flex;
    flex-direction: column;
    gap: 36rpx;
  }
  
  input {
    height: 88rpx;
    font-size: 32rpx;
    border: 1px solid #ececec;
    border-radius: 8rpx;
    padding-left: 24rpx;
    background: #fafbfc;
  }
  
  button[type=primary] {
    background: #007aff;
    color: #fff;
    font-size: 32rpx;
    border-radius: 8rpx;
    height: 88rpx;
    margin-top: 28rpx;
    letter-spacing: 2rpx;
  }
  
  button[loading] {
    opacity: 0.7;
  }
  
  ::placeholder {
    color: #bdbdbd;
  }