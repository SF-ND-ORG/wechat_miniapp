<scroll-view class="ui-page bind-page" scroll-y="true">
	<view class="ui-card bind-hero">
		<image class="bind-hero__icon" src="/assets/imgs/MdiLinkVariant.png"></image>
		<text class="ui-title">账号绑定</text>
		<text class="ui-subtitle">填写学号与姓名以便使用点歌、留言等功能</text>
	</view>

	<view class="ui-card ui-card--quiet bind-form-card">
		<text class="bind-form__title">绑定信息</text>
		<form bindsubmit="onSubmit" class="bind-form">
			<view class="bind-field">
				<text class="bind-field__label">学号</text>
				<input
					name="student_id"
					class="bind-field__input"
					type="number"
					maxlength="7"
					placeholder="请输入6~7位学号" />
			</view>
			<view class="bind-field">
				<text class="bind-field__label">姓名</text>
				<input
					name="name"
					class="bind-field__input"
					type="text"
					placeholder="请输入真实姓名" />
			</view>
			<view class="bind-privacy">
				<checkbox-group name="agree_privacy" class="bind-privacy__group">
					<label class="bind-privacy__label">
						<checkbox value="agree" class="bind-privacy__checkbox" />
						<text class="bind-privacy__text">我已阅读并同意</text>
						<navigator url="/pages/privacy/privacy" class="bind-privacy__link">《隐私声明》</navigator>
					</label>
				</checkbox-group>
			</view>
			<button
				form-type="submit"
				class="bind-submit"
				loading="{{isSubmitting}}"
				disabled="{{isSubmitting}}">
				{{isSubmitting ? '绑定中...' : '完成绑定'}}
			</button>
		</form>
	</view>

	<view class="ui-card bind-tips">
		<text class="bind-tips__title">温馨提示</text>
		<view class="bind-tips__list">
			<text class="bind-tips__item">确保学号与姓名真实有效，避免审核失败</text>
			<text class="bind-tips__item">完成绑定后即可使用点歌、留言、成绩等服务</text>
			<text class="bind-tips__item">如遇到问题，请联系系统管理员协助处理</text>
		</view>
	</view>
</scroll-view>