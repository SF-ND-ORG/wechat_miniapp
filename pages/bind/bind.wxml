<!--pages/bind.wxml-->
<scroll-view>
    <view class="container">
        <form bindsubmit="onSubmit">
            <input name="student_id" style="height: 100rpx; display: block; box-sizing: border-box" type="number" maxlength="6" placeholder="6位学号"/>
            <input name="name" style="height: 100rpx; display: block; box-sizing: border-box" type="text" placeholder="姓名"/>
            <button form-type="submit" type="primary" loading = "{{isSubmitting}}" style="position: relative; left: 0rpx; top: 37rpx">提交</button>
        </form>
    </view>
</scroll-view>