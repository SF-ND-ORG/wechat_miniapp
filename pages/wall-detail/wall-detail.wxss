.detail-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 消息头部 */
.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.type-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.type-general {
  background-color: #4CAF50;
}

.type-lost_and_found {
  background-color: #FF9800;
}

.type-confession {
  background-color: #E91E63;
}

.type-help {
  background-color: #2196F3;
}

.type-announcement {
  background-color: #9C27B0;
}

.time-info {
  font-size: 24rpx;
  color: #999;
}

/* 消息标题 */
.message-title {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

/* 消息内容 */
.message-content {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 元信息 */
.meta-info {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.meta-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
}

.meta-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.meta-value.selectable {
  background-color: #f0f8ff;
  padding: 8rpx;
  border-radius: 4rpx;
}

/* 标签区域 */
.tags-section {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #1296db;
  background-color: #e3f2fd;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 统计信息 */
.stats-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.like-btn {
  background-color: #1296db;
  color: white;
}

.like-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

.contact-btn {
  background-color: #4CAF50;
  color: white;
}

/* 加载和错误状态 */
.loading, .error {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #1296db;
  color: white;
  border: none;
}