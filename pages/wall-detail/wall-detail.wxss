.wall-detail-page {
	padding-bottom: 100rpx;
}

.wall-detail-hero {
	display: flex;
	flex-direction: column;
	gap: 18rpx;
	background: linear-gradient(135deg, rgba(37, 99, 235, 0.16) 0%, rgba(59, 130, 246, 0.1) 100%);
	border: 1rpx solid rgba(37, 99, 235, 0.2);
}

.wall-detail-hero__meta {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 20rpx;
	flex-wrap: wrap;
}

.wall-detail-hero__author {
	display: flex;
	align-items: center;
	gap: 16rpx;
}

.wall-detail-hero__avatar {
	width: 88rpx;
	height: 88rpx;
	border-radius: 50%;
	background: #e2e8f0;
}

.wall-detail-hero__author-info {
	display: flex;
	flex-direction: column;
	gap: 6rpx;
}

.wall-detail-hero__name {
	font-size: 30rpx;
	font-weight: 600;
	color: #0f172a;
}

.wall-detail-hero__tag {
	padding: 8rpx 20rpx;
	border-radius: 999rpx;
	font-size: 24rpx;
	font-weight: 600;
	color: #ffffff;
}

.wall-detail-hero__time {
	font-size: 24rpx;
	color: #475569;
}

.wall-detail-hero__title {
	font-size: 38rpx;
	font-weight: 700;
	color: #0f172a;
	line-height: 1.4;
}

.wall-detail-content {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.wall-detail-content__text {
	font-size: 30rpx;
	color: #1f2937;
	line-height: 1.7;
	white-space: pre-wrap;
	word-break: break-word;
}

.wall-detail-content__media {
	margin-top: 8rpx;
}

.wall-detail-meta {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.wall-detail-meta__row {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.wall-detail-meta__label {
	font-size: 24rpx;
	color: #64748b;
	font-weight: 500;
}

.wall-detail-meta__value {
	font-size: 28rpx;
	color: #1f2937;
	line-height: 1.5;
}

.wall-detail-meta__value.is-selectable {
	background: rgba(59, 130, 246, 0.1);
	padding: 10rpx 16rpx;
	border-radius: 16rpx;
}

.wall-detail-tags {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.wall-detail-section__title {
	font-size: 30rpx;
	font-weight: 600;
	color: #0f172a;
}

.wall-detail-tag {
	padding: 8rpx 24rpx;
	border-radius: 999rpx;
	background: rgba(59, 130, 246, 0.12);
	color: #1d4ed8;
	font-size: 24rpx;
}

.wall-detail-stats {
	display: flex;
	justify-content: space-between;
	gap: 24rpx;
}

.wall-detail-stat {
	flex: 1;
	text-align: center;
	display: flex;
	flex-direction: column;
	gap: 10rpx;
}

.wall-detail-stat__label {
	font-size: 24rpx;
	color: #64748b;
}

.wall-detail-stat__value {
	font-size: 40rpx;
	font-weight: 700;
	color: #0f172a;
}

.wall-detail-actions {
	display: flex;
	gap: 20rpx;
}

.wall-detail-actions__btn {
	flex: 1;
	height: 82rpx;
	border-radius: 999rpx;
	font-size: 28rpx;
	font-weight: 600;
}

.wall-detail-actions__btn::after {
	border: none;
}

.wall-detail-actions__btn--primary {
	background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
	color: #ffffff;
	box-shadow: 0 16rpx 32rpx rgba(37, 99, 235, 0.18);
}

.wall-detail-actions__btn--primary[disabled] {
	background: rgba(148, 163, 184, 0.6);
	box-shadow: none;
}

.wall-detail-actions__btn--ghost {
	background: rgba(255, 255, 255, 0.9);
	color: #1d4ed8;
	border: 1rpx solid rgba(37, 99, 235, 0.2);
}

.wall-detail-discussion {
	display: flex;
	flex-direction: column;
	gap: 28rpx;
}

.wall-detail-discussion__head {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 16rpx;
}

.wall-detail-discussion__hint {
	font-size: 24rpx;
	color: #94a3b8;
}

.wall-detail-discussion__composer {
	display: flex;
	gap: 16rpx;
	align-items: center;
}

.wall-detail-discussion__input {
	flex: 1;
	height: 78rpx;
	border-radius: 24rpx;
	border: 1rpx solid rgba(148, 163, 184, 0.35);
	background: #f8fafc;
	padding: 0 28rpx;
	font-size: 28rpx;
	color: #0f172a;
}

.wall-detail-discussion__input:focus {
	border-color: rgba(37, 99, 235, 0.55);
	background: #ffffff;
	box-shadow: 0 0 0 6rpx rgba(37, 99, 235, 0.12);
}

.wall-detail-discussion__send {
	min-width: 140rpx;
	height: 62rpx;
	border-radius: 999rpx;
	background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
	color: #ffffff;
	font-size: 26rpx;
	font-weight: 600;
    box-shadow: 0 14rpx 28rpx rgba(99, 102, 241, 0.18);
}

.wall-detail-discussion__send::after {
	border: none;
}

.wall-detail-discussion__messages {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}

.wall-detail-discussion__message {
	display: flex;
	gap: 20rpx;
	background: rgba(248, 250, 252, 0.92);
	border: 1rpx solid rgba(148, 163, 184, 0.18);
	border-radius: 24rpx;
	padding: 24rpx;
	box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.08);
}

.wall-detail-discussion__avatar {
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
	background: #e2e8f0;
	display: block;
}

.wall-detail-discussion__message-main {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.wall-detail-discussion__message-head {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	gap: 12rpx;
}

.wall-detail-discussion__name {
	font-size: 28rpx;
	font-weight: 600;
	color: #0f172a;
}

.wall-detail-discussion__time {
	font-size: 24rpx;
	color: #94a3b8;
}

.wall-detail-discussion__status {
	font-size: 22rpx;
	padding: 4rpx 16rpx;
	border-radius: 999rpx;
	font-weight: 500;
}

.wall-detail-discussion__status.is-pending {
	background: rgba(250, 204, 21, 0.16);
	color: #a16207;
}

.wall-detail-discussion__status.is-rejected {
	background: rgba(239, 68, 68, 0.18);
	color: #b91c1c;
}

.wall-detail-discussion__text {
	font-size: 28rpx;
	line-height: 1.7;
	color: #1f2937;
	white-space: pre-wrap;
	word-break: break-word;
}

.wall-detail-discussion__footer {
	display: flex;
	gap: 16rpx;
	font-size: 24rpx;
	color: #94a3b8;
}

.wall-detail-discussion__meta {
	display: inline-flex;
	align-items: center;
	gap: 6rpx;
}

.wall-detail-discussion__empty {
	text-align: center;
	font-size: 26rpx;
	color: #94a3b8;
}

.wall-detail-state {
	padding: 120rpx 40rpx;
	text-align: center;
	font-size: 28rpx;
	color: #64748b;
}

.wall-detail-state--error {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
	align-items: center;
}

.wall-detail-state__btn {
	background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
	color: #ffffff;
	border-radius: 999rpx;
	padding: 0 40rpx;
	height: 80rpx;
}

.wall-detail-state__btn::after {
	border: none;
}

.type-general {
	background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
}

.type-lost_and_found {
	background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.type-help {
	background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.type-announcement {
	background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

@media (max-width: 750rpx) {
	.wall-detail-stats {
		flex-direction: column;
	}

	.wall-detail-actions {
		flex-direction: column;
	}

	.wall-detail-discussion__composer {
		flex-direction: column;
		align-items: stretch;
	}

	.wall-detail-discussion__send,
	.wall-detail-discussion__input {
		width: 100%;
	}
}
