/* 校园墙页面焕新样式 */
.wall-page {
	padding-bottom: 100rpx;
}

.wall-hero {
	background: linear-gradient(135deg, rgba(59, 130, 246, 0.18) 0%, rgba(37, 99, 235, 0.12) 100%);
	border: 1rpx solid rgba(37, 99, 235, 0.28);
}

.wall-hero__head {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	gap: 24rpx;
}

.wall-hero__actions {
	display: flex;
	gap: 16rpx;
}

.wall-btn {
	padding: 0 36rpx;
	height: 88rpx;
	border-radius: 999rpx;
	font-size: 28rpx;
	font-weight: 600;
	display: inline-flex;
	align-items: center;
	justify-content: center;
    box-shadow: 0 16rpx 36rpx rgba(37, 99, 235, 0.16);
    width: 180rpx;
}

.wall-btn--primary {
	background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
	color: #ffffff;
}

.wall-btn--ghost {
	background: rgba(255, 255, 255, 0.8);
	color: #1d4ed8;
	box-shadow: none;
	border: 1rpx solid rgba(59, 130, 246, 0.3);
}

.wall-toolbar {
	display: flex;
	flex-direction: column;
	gap: 28rpx;
}

.wall-tabs {
	display: flex;
	gap: 16rpx;
	flex-wrap: wrap;
}

.wall-tab {
	padding: 14rpx 28rpx;
	border-radius: 999rpx;
	font-size: 26rpx;
	color: #6b7280;
	background: #f1f5f9;
	border: 1rpx solid transparent;
	transition: all 0.2s ease;
}

.wall-tab.is-active {
	background: #1d4ed8;
	color: #ffffff;
	border-color: rgba(29, 78, 216, 0.3);
	box-shadow: 0 10rpx 24rpx rgba(29, 78, 216, 0.2);
}

.wall-search {
	display: flex;
	gap: 20rpx;
	align-items: center;
}

.wall-search__input {
	flex: 1;
	height: 88rpx;
	border-radius: 24rpx;
	border: 1rpx solid rgba(148, 163, 184, 0.35);
	background: #f8fafc;
	font-size: 30rpx;
	color: #0f172a;
	padding: 0 28rpx;
}

.wall-search__input:focus {
	border-color: rgba(37, 99, 235, 0.55);
	background: #ffffff;
	box-shadow: 0 0 0 6rpx rgba(37, 99, 235, 0.12);
}

.wall-search__btn {
	height: 72rpx;
	min-width: 160rpx;
	border-radius: 999rpx;
	background: linear-gradient(135deg, #1d4ed8 0%, #4f46e5 100%);
	color: #ffffff;
	font-size: 28rpx;
	font-weight: 600;
	box-shadow: 0 16rpx 30rpx rgba(79, 70, 229, 0.2);
}

.wall-state {
	text-align: center;
	color: #4b5563;
	font-size: 28rpx;
}

.wall-feed {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.wall-card {
	padding: 32rpx;
	transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.wall-card:active {
	transform: translateY(2rpx);
	box-shadow: 0 14rpx 36rpx rgba(15, 23, 42, 0.12);
}

.wall-card__header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
	gap: 20rpx;
}

.wall-card__author {
	display: flex;
	align-items: center;
	gap: 16rpx;
}

.wall-card__avatar {
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
	background: #e2e8f0;
	display: block;
}

.wall-card__author-info {
	display: flex;
	flex-direction: column;
	gap: 6rpx;
}

.wall-card__author-name {
	font-size: 28rpx;
	font-weight: 600;
	color: #0f172a;
}

.wall-card__tag {
	padding: 10rpx 24rpx;
	border-radius: 999rpx;
	font-size: 24rpx;
	font-weight: 600;
	color: #ffffff;
}

.type-general {
	background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
}

.type-lost_and_found {
	background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.type-help {
	background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.type-announcement {
	background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.wall-card__time {
	font-size: 24rpx;
	color: #94a3b8;
}

.wall-card__title {
	font-size: 34rpx;
	font-weight: 600;
	color: #111827;
	margin-bottom: 16rpx;
}

.wall-card__content {
	font-size: 28rpx;
	color: #475569;
	line-height: 1.7;
	margin-bottom: 20rpx;
}

.wall-card__media {
	margin-bottom: 20rpx;
}

.wall-card__meta {
	display: flex;
	flex-wrap: wrap;
	gap: 16rpx;
	margin-bottom: 20rpx;
}

.wall-card__meta-item {
	font-size: 24rpx;
	color: #1f2937;
	background: rgba(226, 232, 240, 0.6);
	padding: 8rpx 18rpx;
	border-radius: 999rpx;
}

.wall-card__footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 20rpx;
}

.wall-card__stats {
	display: flex;
	gap: 20rpx;
	color: #64748b;
	font-size: 24rpx;
}

.wall-card__stat {
	display: inline-flex;
	align-items: center;
	gap: 6rpx;
}

.wall-card__tags {
	display: flex;
	flex-wrap: wrap;
	gap: 12rpx;
}

.wall-card__chip {
	padding: 6rpx 20rpx;
	border-radius: 999rpx;
	background: rgba(59, 130, 246, 0.12);
	color: #1d4ed8;
	font-size: 22rpx;
}

@media (max-width: 750rpx) {
	.wall-hero__head {
		flex-direction: column;
	}

	.wall-hero__actions {
		width: 100%;
		flex-wrap: wrap;
		justify-content: flex-start;
	}

	.wall-btn {
		flex: 1;
	}

	.wall-search {
		flex-direction: column;
	}

	.wall-search__btn,
	.wall-search__input {
		width: 100%;
	}

	.wall-card__footer {
		flex-direction: column;
		align-items: flex-start;
	}
}

.message-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.message-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.message-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #888;
  padding: 4rpx 8rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.message-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #888;
}

.tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 20rpx;
  color: #1296db;
  background-color: #e3f2fd;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 加载和空状态 */
.loading, .empty {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}