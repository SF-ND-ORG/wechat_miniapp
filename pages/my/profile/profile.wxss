.profile-page {
  padding-bottom: 120rpx;
}

.profile-card {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  align-items: stretch;
}

.profile-avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.profile-avatar__image {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  background: #e2e8f0;
}

.profile-avatar__button {
  font-size: 26rpx;
  color: #2563eb;
}

.profile-field {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.profile-field__label {
  font-size: 28rpx;
  color: #475569;
}

.profile-field__input {
  height: 84rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.35);
  background: #f8fafc;
  padding: 0 24rpx;
  font-size: 30rpx;
}

.profile-save {
  height: 88rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.profile-status {
  min-height: 36rpx;
  font-size: 24rpx;
  color: #0f172a;
}

.profile-status.is-error {
  color: #b91c1c;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.profile-info__row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #1f2937;
}

.profile-info__label {
  color: #64748b;
}

.profile-info__value.is-admin {
  color: #16a34a;
  font-weight: 600;
}
