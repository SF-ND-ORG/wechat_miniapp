/* 搜索页面样式 */
.page-container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.my-requests-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: white;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.my-requests-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-2rpx);
}

.my-requests-btn::after {
  border: none;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

.btn-text {
  font-size: 26rpx;
  color: white;
}

/* 搜索区域 */
.search-section {
  padding: 30rpx;
}

.search-input-container {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.search-bar {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  border: none;
  border-radius: 44rpx;
  padding: 0 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.search-bar:focus {
  background: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.search-btn {
  width: 120rpx;
  height: 88rpx;
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(238, 90, 36, 0.3);
  transition: all 0.3s ease;
}

.search-btn:disabled {
  background: #ccc;
  box-shadow: none;
}

.search-btn::after {
  border: none;
}

/* 搜索结果区域 */
.results-section {
  padding: 0 30rpx;
}

.song-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  margin-bottom: 20rpx;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.song-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.song-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-right: 20rpx;
}

.song-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.song-artist {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

.request-btn {
  background: linear-gradient(45deg, #4facfe, #00f2fe);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  min-width: 120rpx;
  box-shadow: 0 6rpx 20rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.request-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.4);
}

.request-btn::after {
  border: none;
}

.request-btn[loading] {
  background: #ccc;
}

/* 空状态 */
.empty-state, .initial-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon, .initial-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
  filter: brightness(0) invert(1);
}

.empty-text, .initial-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.empty-desc, .initial-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header-content {
    flex-direction: column;
    gap: 20rpx;
    align-items: flex-start;
  }
  
  .search-input-container {
    flex-direction: column;
  }
  
  .search-bar, .search-btn {
    width: 100%;
  }
  
  .song-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 20rpx;
  }
  
  .song-info {
    margin-right: 0;
    width: 100%;
  }
  
  .request-btn {
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    color: #222;
  }
  
  .song-artist {
    font-size: 26rpx;
    color: #616161;
  }
  
  .song-album {
    font-size: 24rpx;
    color: #a0a0a0;
  }
  
  .request-btn {
    margin-left: 18rpx;
    padding: 0 24rpx;
    height: 60rpx;
    background: #ff9800;
    color: #fff;
    font-size: 26rpx;
    border-radius: 8rpx;
  }
}